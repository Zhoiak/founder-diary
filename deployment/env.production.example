# Production Environment Variables for Coolify
# Copy this to .env.production and update values

# DATABASE
DATABASE_URL=postgresql://founder_user:YOUR_PASSWORD@postgres:5432/founder_diary
DIRECT_URL=postgresql://founder_user:YOUR_PASSWORD@postgres:5432/founder_diary

# NEXTAUTH
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secret-key-here-generate-with-openssl-rand-base64-32

# NEXTAUTH PROVIDERS
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# REDIS (for sessions and caching)
REDIS_URL=redis://redis:6379

# SECURITY
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# MONITORING
SENTRY_DSN=your-sentry-dsn-for-error-tracking
POSTHOG_KEY=your-posthog-key-for-analytics

# EMAIL (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# STORAGE (for file uploads)
STORAGE_BUCKET=founder-diary-uploads
STORAGE_REGION=eu-central-1

# API KEYS
OPENAI_API_KEY=your-openai-key-for-ai-features

# FEATURE FLAGS
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true
